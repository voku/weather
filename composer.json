{
  "name": "voku/weather",
  "type": "library",
  "description": "Weather API Wrapper",
  "homepage": "https://github.com/voku/weather",
  "license": "MIT",
  "authors": [
    {
      "name": "Lars Moelleken",
      "email": "lars@moelleken.org",
      "homepage": "https://moelleken.org",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "8.1.*||8.2.*",
    "psr/http-client-implementation": "*",
    "psr/http-factory-implementation": "*"
  },
  "require-dev": {
    "phpstan/phpstan": "1.10.*",
    "phpunit/phpunit": "11.4.*",
    "php-cs-fixer/shim": "v3.27.*",
    "voku/httpful": "3.0.*"
  },
  "autoload": {
    "psr-4": {
      "voku\\weather\\": "src/voku/weather/"
    }
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse",
    "phpcsfixer": "php-cs-fixer fix --config=\"phpcs.php_cs\" --verbose src"
  }
}
